 <!--Main Site-->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/" class="border-shadow"> <i class="fas fa-angle-double-left"></i>
                    All Product
                </a>
            </div>              
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark"> Update Product</h2>
            <span class="text-light"></span>
        </div>
        <!--form handling-->
        <form  method="POST" id="update_product">
            <div class="new_product">
                <div class="form-group">
                    <label for="name" class="text-light">BookName</label>
                    <input type="hidden" name="id" value="">
                    <input type="text"  name="name" value="" placeholder="Name">
                </div>

                <div class="form-group">
                    <label for="name" class="text-light">Author</label>
                    <input type="text"  name="author" value="" placeholder="Author">
                </div>
                      
                <div class="form-group">
                    <label for="status" class="text-light">Status</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="status" value="Active">
                        <label for="radio-2" class="radio-label">Active</label>
                    </div>       
                    <div class="radio inline">
                        <input type="radio" id="radio-3"  name="status" value="Inactive">
                        <label for="radio-3" class="radio-label">InActive</label>
                    </div>                   
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>     
        </form>
        <!--form handling-->
    </div>       
</main>
<!--Main Site-->

